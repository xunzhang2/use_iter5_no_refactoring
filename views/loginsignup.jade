extends layout

block content
  header#top.header
    .text-vertical-center
    
      if (locals.success)
        .alert.alert-success(style='width:20%; margin:auto')
          a.close(href='#', data-dismiss='alert', aria-label='close') ×
          strong #{message}
      if(locals.failure)
        .alert.alert-danger(style='width:20%; margin:auto')
          a.close(href='#', data-dismiss='alert', aria-label='close') ×
          strong #{message}

      form.form-signin(style='width:60%; margin:auto;', action='/login', method='post', enctype='application/json')
        h1 Enter credentials: 
        br
        br
        input#username.form-control.input-lg(type='text', value='#{username}', pattern='.{3,}', required='', title='At least 3 characters', autofocus='', style='width:50%; margin:auto;', name='username')
        br
        input#password.form-control.input-lg(type='password', value='#{password}', pattern='.{4,}', required='', title='At least 4 characters', style='width:50%; margin:auto', name='password')
        
        input#password2.form-control.input-lg(type='password', placeholder='Confirm Password', pattern='.{4,}', required='', title='At least 4 characters', style='width:50%; margin:auto', name='password2')
        br
        button.btn.btn-lg.btn-primary.btn-block(type='submit', style='width:50%; margin:auto') Sign Up
                                                                        